<% include partials/header %>

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YourCamp!</h1>
                <p>Share your camp with adventurers from around the world.</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
                </p>
            </div>
        </header>

        <h3>Top Camps</h3>
        <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="img-thumbnail">
                    <img src="<%= campground.image %>" alt="campground picture" class="img-fluid">
                    <div class="caption">
                        <h4><%= campground.name %></h4>  
                    </div>
                </div>
            </div>
        <% }); %>
        </div>
        
        

        <br>

        <a href="/">Back to Landing Page</a>
    </div>
<%include partials/footer %>